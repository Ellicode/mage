{
    "name": "Music",
    "description": "A simple music application that fetches data from a music API and displays it to the user.",
    "version": "1.0.0",
    "author": "Ellicode",
    "appScheme": "com.ellicode.music",
    "icon": {
        "type": "lucide-icon",
        "name": "Music",
        "color": "#ff2056"
    },
    "intents": [
        {
            "name": "Music",
            "type": "menu",
            "description": "Play smooth music",
            "src": "@/MusicApp.vue",
            "intentScheme": "com.ellicode.music.playMusic",
            "aliases": ["music", "play", "audio", "song", "band", "playlist"],
            "regexPatterns": [
                "^music\\s+player$",
                "^play\\s+(.+)\\s+music$",
                "^listen\\s+to\\s+.+$"
            ]
        }
    ]
}
